---
// GENERAL
import { Picture } from "astro:assets";
// ASTRO
import ButtonIntern from "./ButtonIntern.astro";
//IMG
// IMG SOURCE = Oplevskansen.dk
import Figure1 from "../../assets/img/svommehal/Welness.png";

interface Props {
  headingLevel: "h1" | "h2";
  headingText: string;
}

const { headingLevel, headingText } = Astro.props;
---

<div
  class="full-width flex row"
  role="region"
  aria-label="Wellness- og relaxområde"
>
  <div class="left flex">
    <Picture
      src={Figure1}
      class="img flex"
      alt="Siluet af en person, der sidder i sauna med håndklæde omkring sig"
    />
  </div>
  <div class="flex column right">
    <div class="flex sec-cont column">
      <section class="flex column">
        {
          headingLevel === "h1" ? (
            <h1>{headingText}</h1>
          ) : (
            <h2>{headingText}</h2>
          )
        }
        <p>
          Du kan også komme ind og slappe af i vores terapibassin eller læn dig
          tilbage og find din indre ro i vores wellness- & relaxområde.
        </p>
        <p>
          I vores wellness-afdeling kan du slappe af og nyde indendørs og
          udendørs varmtvandsbassiner med massagedyser og boblezoner. Derudover
          har vi dampbad, koldtvandskar og brusere. Vi tilbyder fire forskellige
          saunaer, herunder en panoramasauna og en af Danmarks største
          Kelosaunaer, hvor vi holder ca. 30 saunagus om ugen med forskellige
          dufte.
        </p>
        <div class="flex row but-cont">
          <ButtonIntern href="/svoemmehal/wellness-relax" p="Wellnes & Relax" />
          <ButtonIntern
            href="/svoemmehal/wellness-relax#gustider"
            p="Saunagustider"
          />
        </div>
      </section>
    </div>
    <div class="flex column line-cont">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1681"
        height="31"
        fill="none"
        class="sauna-line"
        aria-hidden="true"
      >
        <path fill="#FCEDD8" d="M.5 0h1680v31H.5z"></path>
      </svg>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1681"
        height="31"
        fill="none"
        class="sauna-line"
        aria-hidden="true"
      >
        <path fill="#FCEDD8" d="M.5 0h1680v31H.5z"></path>
      </svg>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1681"
        height="31"
        fill="none"
        class="sauna-line"
        aria-hidden="true"
      >
        <path fill="#FCEDD8" d="M.5 0h1680v31H.5z"></path>
      </svg>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1681"
        height="31"
        fill="none"
        class="sauna-line"
        aria-hidden="true"
      >
        <path fill="#FCEDD8" d="M.5 0h1680v31H.5z"></path>
      </svg>
    </div>
  </div>
</div>

<style lang="scss">
  @import "../../css/style.scss";

  .full-width {
    min-height: 70vh;
    max-height: 1080px;
    padding-top: 20px;
    display: flex;
    position: relative;
    z-index: 1;
    .left {
      width: 50%;
      margin-top: auto;
      .img {
        width: 100%;
        height: -webkit-fit-content;
      }
    }
    .right {
      width: 50%;
      height: 50%;
      overflow: hidden;
      margin-top: auto;
      .sec-cont {
        margin-top: auto;
        padding: 10%;
        background-color: $champagne;
        width: 90%;
        border-radius: 30px 30px 0 0;
        box-shadow: $box-shadow-inset-bot;

        section {
          row-gap: 10px;
          .row {
            column-gap: 10px;
          }
          .but-cont {
            column-gap: 25px;
            margin-top: 25px;
          }
        }
      }

      .line-cont {
        display: flex;
        flex-direction: column;
        row-gap: 10px;
        position: relative;
        height: -webkit-fit-content;
        width: 90%;

        &::before {
          content: "";
          position: absolute;
          top: 0;
          left: 0;
          height: 170px;
          width: 5px;
          box-shadow: inset 20px 0 10px #0000002d;
          pointer-events: none;
        }

        .sauna-line {
          width: 100%;
          height: 25px;
        }
      }
    }
  }

  @media (max-width: 1250px) {
    .full-width {
      .right {
        .sec-cont {
          padding: 5%;
        }
      }
    }
  }
  @media (max-width: 800px) {
    .full-width {
      flex-direction: column;
      align-items: center;
      .left {
        width: 90%;
      }
      .right {
        width: 90%;
        margin-top: 0;
        .sec-cont {
          width: 100%;
          padding: 3%;
          border-radius: 0 0 30px 30px;
        }
        .line-cont {
          display: none;
        }
      }
    }
  }
  @media (max-width: 600px) {
    .full-width {
      .right {
        .sec-cont {
          padding: 5%;
        }
      }
    }
  }
</style>
