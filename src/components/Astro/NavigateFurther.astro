---
import { Picture } from "astro:assets";

// IMG
// IMG SOURCE = Gruppe 5
import navFitness from "../../assets/img/navigate-futher-fitness.png";
// IMG SOURCE = Gruppe 5
import navSvomme from "../../assets/img/navigate-futher-svomme.png";
---

<div class="full-width flex row align">
  <a
    href="/fitness"
    title="Gå til Skansen Fitness"
    class="flex row fit"
    aria-label="Gå til Skansen Fitness"
    ><div class="img-cont">
      <Picture
        src={navFitness}
        alt="Siluet af en håndboldspiller med grafiske ringe omkring sig"
        formats={["avif", "png", "webp"]}
        class="img"
      />
    </div>

    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 320 512"
      class="arrow"
      aria-hidden="true"
    >
      <path
        d="M278.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L210.7 256 73.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z"
      ></path>
    </svg>
  </a>
  <a
    href="/svoemmehal"
    title="Gå til Skansen Svømmehal"
    class="flex row svom"
    aria-label="Gå til Skansen Svømmehal"
  >
    <div class="img-cont">
      <Picture
        src={navSvomme}
        alt="Siluet af en person, der sidder i sauna med håndklæde omkring sig"
        formats={["avif", "png"]}
        class="img"
      />
    </div>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 320 512"
      class="arrow"
      aria-hidden="true"
    >
      <path
        d="M278.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L210.7 256 73.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z"
      ></path>
    </svg>
  </a>
</div>

<style lang="scss">
  @import "../../css/style.scss";

  .full-width {
    padding-bottom: 50px;
    row-gap: 25px;
    margin-top: 50px;
    a {
      position: relative;
      width: 48%;
      max-height: 400px;
      min-height: 100px;
      height: -webkit-fit-content;
      border: double 25px transparent;
      box-shadow: $box-shadow;
      &:hover {
        border: solid 20px $pure-white;
        box-shadow: $box-shadow-inset;
        border-radius: 30px;
        .arrow {
          transform: rotate(360deg);
        }
      }
      .arrow {
        position: absolute;
        right: 20px;
        bottom: 40%;
        transition: $transition;
        width: 25px;
        fill: $pure-white;
      }
    }
  }
  .fit {
    margin-right: auto;
    background-color: $cornell-red;
  }
  .svom {
    background-color: $denim;
  }

  .svom,
  .fit {
    .img-cont {
      height: 100%;
      width: 100%;
      .img {
        transition: $transition;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
      }
    }
  }

  @media (max-width: 850px) {
    .full-width {
      gap: 10px;
      a {
        min-height: 75px;
        gap: 5px;
        margin: 0;
        border: solid 3px;
        outline: none;
        padding: 0;
        .arrow {
          width: 25px;
          height: 25px;
          right: 0;
        }
        .img-cont {
          height: 100%;
          width: 100%;
          .img {
            transition: $transition;
            width: 100%;
            height: auto;
            object-position: center;
            margin: 0;
          }
        }
      }
    }
  }
</style>
